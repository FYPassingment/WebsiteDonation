<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
    <%- include('partials/navbar-withbg') %>

    <!-- Search Results Section -->
    <div class="container my-5">
        <h2 class="text-center">Results Found Based On Your Search Criteria</h2>
        <div class="mt-4">
        <% if (events.length > 0) { %>
            <ul class="list-group">
            <% events.forEach(event => { %>
                <li class="list-group-item">
                <span class="badge bg-light text-success shadow fst-italic mb-1">EVENT</span>
                <h5 class="mb-1">
                    <a href="/booking/<%= event.id %>" class="text-dark text-decoration-none"><%= event.name %></a>
                </h5>
                <p class="mb-1">By: <%= event.organizer %></p>
                <p class="mb-1">Location: <%= event.location %>, Date: <%= event.date %>, Time: <%= event.time %></p>
                </li>
            <% }); %>
            </ul>
        <% } else { %>
            <p>No events found matching your criteria.</p>
        <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
