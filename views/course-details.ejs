<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
    <%- include('partials/navbar-withbg') %>

    <!-- Course Details Content -->
    <div class="hero-section mb-0" style="background-image: url(<%= course.image %>);">
        <div class="overlay"></div>
        <div class="content text-center text-white">
            <h1><%= course.title %></h1>
        </div>
    </div>

    <div class="container my-5">
        <div class="row mt-1">
            <div class="col-md-12">
                <div class="card border-0">
                    <div class="card-body">
                        <div class="text-center">
                            <h1 style="text-shadow: none;" class="mt-4"><%= course.title %></h1>
                        </div>
                        <hr>
                        <p class="card-text"><%= course.description %></p>
                        <h4>These are some of the courses we offer:</h4>
                        <ul>
                            <% course.subcourses.forEach(subcourse => { %>
                                <li><%= subcourse %></li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
